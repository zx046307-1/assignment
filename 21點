#include <iostream>
#include <iomanip>
#include <ctime>
#include <cstdlib>
#include <string>
#include <vector> 
#include "test.h"
using namespace std;

int balance[4];

int main()
{
    int choose = 1;
    test test;
    test.inputBet();
    test.initPoker();

    while (choose == 1 || choose == 2 || choose == 3 || choose == 4)
    {
        cout << "1.要牌 2.不要牌 3.重新開始 4.退出  >>請輸入數字選擇操作:";
        cin >> choose;
        if (choose == 1)
        {
            test.farmerAsk();
        }
        else if (choose == 2)
        {
            test.landlordProcess();
        }
        else if (choose == 3) 
        {
            test.newGame();
        }
        else if (choose == 4)
        {
            exit(0);
        }
    }

    return 0;
}

